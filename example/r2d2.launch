<?xml version="1.0"?>
<launch>
    <group ns="r2d2">
        <param name="robot_description" command="$(find xacro)/xacro $(find map_simulator)/example/r2d2.xacro"/>
        
        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>
        
        <node pkg="map_simulator" type="spawn" name="spawn">
            <param name="zero_joints" value="true"/>
            <param name="shape" value="square"/>
            <param name="static_tf_odom" value="true"/>
            <param name="radius" value=".3"/>
            <param name="x" value="1"/>
            <param name="robot_color" value="[100,50,50]"/>
            <param name="laser_color" value="[250,0,0]"/>
        </node>
    </group>
</launch>
